{
  "name": "@rxdi/firelink",
  "version": "0.7.41",
  "bin": {
    "firelink": "./dist/main.js"
  },
  "scripts": {
    "build": "parcel build ./src/main.ts --experimental-scope-hoisting --target node",
    "patch": "npm run build && npm version patch && npm publish --update-readme --access public",
    "test": "npx jest",
    "lint": "npx eslint . --ext .ts",
    "lint-fix": "npx eslint . --fix --ext .ts"
  },
  "files": [
    "dist/*"
  ],
  "fireConfig": {
    "runner": "firebase"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint && npm run test"
    }
  },
  "devDependencies": {
    "@rxdi/parcel-plugin-shebang": "^0.7.38",
    "typescript": "^3.5.3",
    "@types/jest": "25.1.2",
    "@types/node": "^12.0.10",
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "jest": "25.1.0",
    "jest-cli": "25.1.0",
    "prettier": "^1.19.1",
    "ts-jest": "25.2.1",
    "ts-loader": "^6.2.1",
    "husky": "^4.2.3"
  }
}
